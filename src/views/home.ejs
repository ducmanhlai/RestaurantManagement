<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>


    <body id="page-top">
        <!-- Page Wrapper -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Thanh toán</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <input type="text" id="name" class="form-control text-dark" placeholder="Tiền nhận">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary" id="btnSave">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
        <div id="wrapper">

            <%- include('./partials/menu'); %>
                <div id="content-wrapper" class="d-flex flex-column">
                    <!-- Main Content -->
                    <div id="content">
                        <%- include('./partials/navbar'); %>
                            <div class="container-fluid">
                                <div>
                                    <button type="button" class="btn btn-labeled btn-info" id="btn-add"
                                        onclick='ModifyScreen()'>
                                        <span class="btn-label"><i class="fa fa-plus"></i></span> Thêm order
                                    </button>
                                    <button type="button" class="btn btn-labeled btn-info" id="btn-add"
                                        data-bs-toggle="modal" data-bs-target='#exampleModal'>
                                        <span class="btn-label"><i class="fa fa-list fa-beat-fade"></i></span>Danh sách order
                                    </button>
                                </div>
                                <table class="table table-bordered " id="orderTable" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th class="th-sm">STT</th>
                                            <th class="th-sm">Bàn</th>
                                            <th class="th-sm">Thành tiền</th>
                                            <th class="th-sm">Thời gian</th>
                                            <th class="th-sm">Trạng thái</th>
                                            <th class="th-sm">Tùy chọn</th>
                                        </tr>
                                    </thead>
                                    <tbody id="orderTableBody">
                                    </tbody>
                                </table>
                            </div>
                    </div>
                    <footer class="sticky-footer bg-white">
                        <div class="container my-auto">
                            <div class="copyright text-center my-auto">
                                <span>Copyright &copy; Đức Mạnh</span>
                            </div>
                        </div>
                    </footer>
                    <!-- End of Footer -->

                </div>
                <!-- End of Page Wrapper -->

                <!-- Scroll to Top Button-->
                <a class="scroll-to-top rounded" href="#page-top">
                    <i class="fas fa-angle-up"></i>
                </a>
                <%- include('./partials/foot'); %>
                    <script>
                        function ModifyScreen(){
                            window.location.href='/view/create-order'
                        }
                    </script>
                    <script type="module" src="../public/js/home.js"></script>
